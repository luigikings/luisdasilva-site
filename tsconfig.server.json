{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "noEmit": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/server/**/*.ts"]
}
